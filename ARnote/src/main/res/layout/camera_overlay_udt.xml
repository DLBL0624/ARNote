<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/semi_transparent_black"
        android:padding="30dp"
        android:visibility="gone" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9996d0c7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextContent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Text"
                    android:gravity="center_vertical"

                    android:paddingLeft="4dp"
                    android:text="Text"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/colorChange"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:foreground="@color/m_orange"
                    android:onClick="changeTheColor" />

                <EditText
                    android:id="@+id/InputMess"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/LifeTime"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="LifeTime"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ThreeMins"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="3 mins"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/TenMins"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="10 mins"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/ThirtyMins"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="30 mins"
                        android:textSize="14sp" />

                </RadioGroup>
            </LinearLayout>

            <ImageButton
                android:id="@+id/camera_button"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:contentDescription="@string/content_desc_camera_button"
                android:onClick="onCameraClick"
                android:padding="10dp"
                android:src="@drawable/camera_button_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/m_orange"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/m_mes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:onClick="OnMesClick"
                    app:srcCompat="@drawable/menu_mes" />

                <ImageButton
                    android:id="@+id/m_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:onClick="OnAddClick"
                    app:srcCompat="@drawable/menu_add" />

                <ImageButton
                    android:id="@+id/m_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:onClick="OnMapClick"
                    app:srcCompat="@drawable/menu_map" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>